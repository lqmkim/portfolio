---
import FormattedDate from "@components/misc/formatted-date.astro";

const { title, date, slug } = Astro.props;
---

<a href={`/writings/${slug}`}>
  <article class="flex flex-row items-center justify-between w-full">
    <h3 class="text-base font-medium font-['EB_Garamond']">{title}</h3>
    <p class="text-gray-500 font-medium font-['EB_Garamond']">
      <FormattedDate date={date} />
    </p>
  </article>
</a>
